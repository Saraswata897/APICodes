<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SeleniumGridSuite" parallel="tests" thread-count="5">


    <test name="ChromeTest1">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.base.MySeleniumTestClass" />
        </classes>
    </test>

    <test name="ChromeTest2">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.base.AnotherClass" />
        </classes>
    </test>

    <test name="ChromeTest3">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.base.ThirdClass" />
        </classes>
    </test>

    <test name="EdgeTest1">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.base.MySeleniumTestClass" />
        </classes>
    </test>

    <test name="EdgeTest2">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.base.AnotherClass" />
        </classes>
    </test>

</suite>